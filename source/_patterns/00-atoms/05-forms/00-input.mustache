<div class="form-group form-group-{{ styleModifier }}">
  <label for="example-input" class="col-form-label">{{ label }}</label>
  <input id="example-input" class="form-control" type="{{ input }}" placeholder="{{ placeholder }}">
</div>

{{# variations }}

<div class="form-group">
  <label for="example-email-input" class="col-form-label">Email</label>
  <input id="" class="form-control" type="email" value="bootstrap@example.com">
</div>

<div class="form-group">
  <label for="example-url-input" class="col-form-label">URL</label>
  <input id="example-email-input" class="form-control" type="url" value="https://getbootstrap.com">
</div>

<div class="form-group">
  <label for="example-tel-input" class="col-form-label">Telephone</label>
  <input id="example-tel-input" class="form-control" type="tel" value="1-(555)-555-5555">
</div>

<div class="form-group">
  <label for="example-password-input" class="col-form-label">Password</label>
  <input id="example-password-input" class="form-control" type="password" value="hunter2">
</div>

<div class="form-group">
  <label for="example-number-input" class="col-form-label">Number</label>
  <input id="example-number-input" class="form-control" type="number" value="42">
</div>

<div class="form-group">
  <label for="example-datetime-local-input" class="col-form-label">Date and time</label>
  <input id="example-datetime-local-input" class="form-control" type="datetime-local" value="2011-08-19T13:45:00">
</div>

{{/ variations }}