<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg btn-solid" data-toggle="modal" data-target="#myModal"><span class="fa fa-info-circle" aria-hidden="true"></span> Modal</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-{{ styleModifier }}">

    <!-- Modal content-->
    <div class="modal-content">
      
      <!-- Modal Header -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" title="Close">
            <span class="fa fa-times" aria-hidden="true"></span>
        </button>
        <h4 class="modal-title">{{ headline }}</h4>
      </div>

      <!-- Modal Body -->
      <div class="modal-body">
        <p>{{ message }}</p>
      </div>

      <!-- Modal Footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-link" data-dismiss="modal">Ok, got it <span class="fa fa-check" aria-hidden="true"></span></button>
      </div>

    </div><!-- /.modal-content -->

  </div><!-- /.modal-dialogue -->
</div><!-- /.modal -->