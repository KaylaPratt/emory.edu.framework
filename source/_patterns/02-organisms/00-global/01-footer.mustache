					<nav>
						{{> atoms-block-list }}
						{{> atoms-block-list }}
						{{> atoms-block-list }}
					</nav>
				</div><!-- /column -->

			</div><!-- /.row -->
		</div><!-- /.container -->
	</div><!-- /.footer-primary -->
	
	<!-- Post Footer Nav -->
	<div class="container-fluid post-footer">
		<nav>
			{{> atoms-block-list }}
			{{> atoms-block-list }}
