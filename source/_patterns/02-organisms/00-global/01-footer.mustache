							{{> molecules-address }}
							{{> atoms-social-media:btn-group|btn-group-lg }}
						</div><!--/column -->

					</div><!--/.row -->
				</div><!--/column -->

				<!-- Primary Footer Nav -->
				<div class="col-sm-6 col-md-3">
					<span class="underline">Footer Nav</span>
					<nav>
						{{> atoms-block-list }}
						{{> atoms-block-list }}
						{{> atoms-block-list }}
					</nav>
				</div>

				<div class="clearfix visible-sm-block hidden-md"></div>

